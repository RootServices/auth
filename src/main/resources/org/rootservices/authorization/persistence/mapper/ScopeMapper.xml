<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.rootservices.authorization.persistence.mapper.ScopeMapper">

    <resultMap id="scope" type="org.rootservices.authorization.persistence.entity.Scope">
        <result column="uuid" property="uuid" javaType="java.util.UUID" jdbcType="OTHER" typeHandler="org.rootservices.authorization.persistence.mapper.typehandler.UUIDTypeHandler"/>
        <result column="name" property="name"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="insert" >
        insert into scope (uuid, name)
        values (#{scope.uuid}, #{scope.name})
    </insert>

</mapper>