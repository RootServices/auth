<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.rootservices.authorization.persistence.mapper.AuthRequestMapper">

    <resultMap id="authRequest" type="org.rootservices.authorization.persistence.entity.AuthRequest">
        <result column="uuid" property="uuid" javaType="java.util.UUID" jdbcType="OTHER" typeHandler="org.rootservices.authorization.persistence.mapper.typehandler.UUIDTypeHandler"/>
        <result column="response_type" property="responseType" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        <result column="redirect_uri" property="redirectURI" javaType="java.net.URI" jdbcType="VARCHAR" typeHandler="org.rootservices.authorization.persistence.mapper.typehandler.URITypeHandler"/>
        <result column="authCodeUUID" property="auth_code_uuid" javaType="java.util.UUID" jdbcType="OTHER" typeHandler="org.rootservices.authorization.persistence.mapper.typehandler.UUIDTypeHandler"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="insert">
        insert into auth_request (uuid, response_type, redirect_URI, auth_code_uuid)
        values (
        #{authRequest.uuid},
        #{authRequest.responseType, typeHandler=org.apache.ibatis.type.EnumTypeHandler},
        #{authRequest.redirectURI,  typeHandler=org.rootservices.authorization.persistence.mapper.typehandler.OptionalURITypeHandler},
        #{authRequest.authCodeUUID}
        )
    </insert>
</mapper>